<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid justify-content-end">
    <%= link_to "Add new list", new_list_path, class: "btn btn-primary" %>
  </div>
</nav>

<div class="container mt-4">
  <h1 class="mb-4 text-center">My Movie Lists</h1>
  <div class="row justify-content-center">
    <% @lists.each do |list| %>
      <div class="col-md-4 mb-4">
        <%= link_to list_path(list), class: "text-decoration-none" do %>
          <div class="card shadow-sm">
            <% if list.image.attached? %>
              <%= image_tag list.image, class: "card-img-top" %>
            <% end %>
            <div class="card-body">
              <h5 class="card-title text-center"><%= list.name %></h5>
              <p class="card-text">Some quick example text to build on the list and make up the bulk of the card's content.</p>
            </div>
          </div>
        <% end %> <!-- This ends the link_to block -->
      </div>
    <% end %> <!-- This ends the @lists.each block -->
  </div>
</div>
